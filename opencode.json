{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "time": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-time"
      ],
      "enabled": true
    }
  }
}
